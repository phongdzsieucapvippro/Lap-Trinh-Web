@{
    @model List<Bai_tap_thuc_hanh.Models.Product>;

    <div class="hot-products">
        @foreach (var p in Model)
        {
            <div class="product">
                <img src="@p.Image" alt="@p.Name" />
                <p>@p.Name</p>
            </div>
        }
    </div>
}
